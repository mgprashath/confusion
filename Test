    });

    $(document).ready(function () {
        $('#toggleQuoteStatus').change(function () {
            if ($(this).is(":checked")) {
                $("#secQuoteStatus").show();
            } else {
                $("#secQuoteStatus").hide();
            }
        });
    });

</script>
